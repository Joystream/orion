{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "rootDirs": [".", "../src"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.json", "../src/**/*.ts"]
}
