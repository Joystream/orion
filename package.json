    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.36",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.4.5",
    "husky": "^4.3.0",
    "jest": "^28.1.0",
