    "@polkadot/util-crypto": "^10.2.1",
    "@typegoose/auto-increment": "^1.3.0",
    "@typegoose/typegoose": "^9.8.1",
    "apollo-server-core": "^3.8.1",
    "apollo-server-express": "^3.8.1",
    "class-validator": "^0.13.2",
    "date-fns": "^2.28.0",
